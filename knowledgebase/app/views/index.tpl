<script>
    function toggleMenu(contentId, arrowId, event) {
        event.preventDefault();

        var content = document.getElementById(contentId);
        var arrow = document.getElementById(arrowId);

        if (content.style.display === 'none' || content.style.display === '') {
            content.style.display = 'block';
            arrow.classList.add('rotate');
        } else {
            content.style.display = 'none';
            arrow.classList.remove('rotate');
        }
    }

     function toggleSubMenu(subMenuId, arrowId, event) {
        event.preventDefault();

        var subMenu = document.getElementById(subMenuId);
        var arrow = document.getElementById(arrowId);

        if (subMenu.style.display === 'none' || subMenu.style.display === '') {
            subMenu.style.display = 'flex';
            arrow.classList.add('rotate');
        } else {
            subMenu.style.display = 'none';
            arrow.classList.remove('rotate');
        }
    }



    // Получаем ссылку на полноэкранное изображение и кнопку закрытия
    const fullscreenImage = document.getElementById('fullscreen-image');
    const img = fullscreenImage.querySelector('img');
    const closeButton = fullscreenImage.querySelector('.close-button');
    const thumbnails = document.querySelectorAll('.thumbnail');

    // Функция для открытия и закрытия изображения в полный экран
    thumbnails.forEach(thumbnail => {
        thumbnail.addEventListener('click', (event) => {
            const clickedImgSrc = event.target.getAttribute('src');
            img.setAttribute('src', clickedImgSrc);
            fullscreenImage.style.display = 'flex';
            img.style.maxHeight = '95vh'; // Устанавливаем высоту изображения в 95% высоты экрана
            img.style.maxWidth = '95vw'; // Устанавливаем ширину изображения в 95% ширины экрана
        });
    });

    // Закрыть полноэкранный режим при нажатии кнопки закрытия
    closeButton.addEventListener('click', () => {
        fullscreenImage.style.display = 'none';
    });

    // Закрыть полноэкранный режим при нажатии клавиши Esc
    document.addEventListener('keydown', (event) => {
        if (event.key === 'Escape') {
            fullscreenImage.style.display = 'none';
        }
    });


</script>
